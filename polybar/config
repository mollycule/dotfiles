# ~/.config/polybar/config
# Primary polybar configuration file

; ----- Global Settings -----

[global/wm]
margin-top = 100
margin-bottom = 100


[colors]
# Inherit colors from X
fg = ${xrdb:color7}
bg = ${xrdb:color3}
modfg = ${xrdb:color1}

[sizes]
height = 20

[monitors]
# TODO pull from env variables
center = HDMI-1
left = eDP-1
right = HDMI-1

; ----- Bar Settings -----

[bar/bar-primary]
monitor = ${monitors.left} 
bottom = false

fixed-center = true

border-size = 0
border-color = ${colors.bg}

width = 100%
height = 20

override-redirect = false
offset-x = 0%
offset-y = 0%
radius = 0.0

enable-ipc = false

padding-left = 1
padding-right = 1

module-margin-right = 0
module-margin-left = 2

modules-right = cpu memory temp-cpu battery 
modules-center = date
modules-left = i3

background = ${colors.bg}
foreground = ${colors.fg}

overline-size = 2
overline-color = ${colors.fg}
underline-size = 0
underline-color = ${colors.fg}

font-0 = "Iosevka SS02:size=10;3"
font-1 = "Iosevka SS02:size=10;3"
font-2 = "Iosevka SS02:size=10;3"
font-3 = "Iosevka SS02:size=10;3"

[bar/bar-left]
monitor = ${monitors.left}
bottom = false

fixed-center = true

border-size = 0
border-color = ${colors.bg}

width = 100%
height = 20

override-redirect = false
offset-x = 0%
offset-y = 0%
radius = 0.0

enable-ipc = false

padding-left = 1
padding-right = 1

module-margin-right = 0
module-margin-left = 2

modules-right = cpu memory temp-cpu battery
modules-center = date
modules-left = i3

background = ${colors.bg}
foreground = ${colors.fg}

overline-size = 2
overline-color = ${colors.fg}
underline-size = 0
underline-color = ${colors.fg}

font-0 = "Iosevka SS02:size=10;3"
font-1 = "Iosevka SS02:size=10;3"
font-2 = "Iosevka SS02:size=10;3"
font-3 = "Iosevka SS02:size=10;3"

[bar/bar-single-monitor]
monitor = ${monitors.center}
bottom = false

fixed-center = true

border-size = 0
border-color = ${colors.bg}

width = 100%
height = 20

override-redirect = false
offset-x = 0%
offset-y = 0%
radius = 0.0

enable-ipc = false

padding-left = 1
padding-right = 1

module-margin-right = 0
module-margin-left = 2

modules-right = cpu memory temp-cpu battery 
modules-center = date
modules-left = i3

background = ${colors.bg}
foreground = ${colors.fg}

overline-size = 2
overline-color = ${colors.fg}
underline-size = 0
underline-color = ${colors.fg}

font-0 = "Iosevka SS02:size=10;3"
font-1 = "Iosevka SS02:size=10;3"
font-2 = "Iosevka SS02:size=10;3"
font-3 = "Iosevka SS02:size=10;3"

[bar/bar-right]
monitor = ${monitors.right}
bottom = false

fixed-center = true

border-size = 0
border-color = ${colors.bg}

width = 100%
height = 20

override-redirect = false
offset-x = 0%
offset-y = 0%
radius = 0.0

enable-ipc = false

padding-left = 1
padding-right = 1

module-margin-right = 0
module-margin-left = 2

modules-right = brightness
modules-center = date
modules-left = i3

background = ${colors.bg}
foreground = ${colors.fg}

overline-size = 2
overline-color = ${colors.fg}
underline-size = 0
underline-color = ${colors.fg}

font-0 = "Iosevka SS02:size=10;3"
font-1 = "Iosevka SS02:size=10;3"
font-2 = "Iosevka SS02:size=10;3"
font-3 = "Iosevka SS02:size=10;3"

; ----- Module Settings -----

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = AC
poll-interval = 5
format-charging = <label-charging>
format-discharging = <label-discharging>
label-charging = [ BAT %percentage%% + ]
label-discharging = [ BAT %percentage%% - ]
label-full = [ BAT 100% ]

[module/brightness]
type = internal/xbacklight
output = ${monitors.left}
enable-scroll = true
label = [ BKLT %percentage%% ]

[module/cpu]
type = internal/cpu
interval = 0.5
format = [ CPU <label> ]
label = "%percentage%%"

[module/date]
type = internal/date
interval = 10
date = %m/%d/%y
time = %H:%M
label = [ %date% %time% ]
label-underline = ${colors.fg}
label-foreground = ${colors.fg}
label-background = ${colors.bg}

[module/i3]
type = internal/i3
enable-click = true
enable-scroll = true
format = <label-state>
fuzzy-match = true
index-sort = true
label-focused = "%{O2}[ %index% ] "
label-mode = %mode%
label-unfocused = "%{O2}  %index%  "
label-urgent = "%{O2}  %index%!  "
label-visible = "%{O2}[ %index% ] "
pin-workspaces = true
reverse-scroll = false
strip-wsnumbers = false
wrapping-scroll = true

[module/memory]
type = internal/memory
interval = 1
label = [ MEM %percentage_used%% ]
label-underline = ${colors.fg}
label-foreground = ${colors.fg}
label-background = ${colors.bg}

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 2

[module/temp-cpu]
type = internal/temperature
interval = 5
label = [ TEMP %temperature-f% ]
label-warn = [ TEMP %temperature-f% ! ]
thermal-zone = 0
warn-temperature = 80 #Celsius == 176 Fahrenheit == 353.15 Kelvin

[module/volume]
type = internal/pulseaudio
format-volume = [ VOL <label-volume> ]
format-muted = [ VOL <label-muted> ]
label-muted = "MUTED"
label-volume = "%percentage%%"

