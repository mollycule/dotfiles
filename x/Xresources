! ----- Xft settings -----
Xft.autohint: 0
Xft.antialias: 1
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.rgba: rgb
Xft.lcdfilter: lcddefault
Xft.dpi: 96
Xcursor.theme: Default

! ----- urxvt settings -----
! Disable the scrollbar by default
URxvt.scrollbar: false

! Set the internal border
URxvt.internalBorder: 15

! Disable these to make Ctrl-Shift bindings work
URxvt.iso14755: false
URxvt.iso14755_52: false

! TODO fix following error
! urxvt: perl extension 'resize-font' not found in perl library search path
! it is in path, so... dunno
! Declare perl extensions
URxvt.perl-ext-common: resize-font

! Set Ctrl-Shift-{+,-} to change font size
URxvt.keysym.C-+: resize-font:bigger
URxvt.keysym.C-_: resize-font:smaller

! Set font
URxvt.font: xft:Iosevka SS02:size=12

! Disables printing out a screen dump of my terminal when PrntScrn is pressed
! Nice try, satan.
URxvt.print-pipe: "cat > /dev/null"
